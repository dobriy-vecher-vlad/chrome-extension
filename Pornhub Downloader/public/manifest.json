{
	"manifest_version": 3,
	"name": "Pornhub Downloader",
	"version": "1.0.3",
	"description": "Save and copy any video from Pornhub.",
	"action": {
		"default_icon": "icon.png",
		"default_title": "Pornhub Downloader",
		"default_popup": "index.html"
	},
	"permissions": [
		"downloads",
		"tabs",
		"activeTab",
		"scripting"
	],
	"host_permissions": [
		"https://*.pornhub.com/*",
		"https://*.pornhub.org/*",
		"https://*.phncdn.com/*"
	],
	"sandbox": {
		"pages": ["sandbox.html"]
	},
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": ["https://*.pornhub.com/*", "https://*.pornhub.org/*", "https://*.phncdn.com/*"],
			"js": ["content.js"],
			"css": ["style.css"]
		}
	],
	"icons": {
		"16": "icon.png",
		"48": "icon-48.png",
		"128": "icon-128.png"
	},
	"update_url": "https://clients2.google.com/service/update2/crx"
}